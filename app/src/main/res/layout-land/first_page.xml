<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearFirstPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@drawable/floor_ge"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="26dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recylerViewFloor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="36dp"

                        android:layout_marginTop="65dp" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:background="#305478"
                            android:gravity="bottom"
                            android:padding="8dp"
                            android:text="SEARCH BY FLOOR"
                            android:textColor="#ffff"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="550dp"
                            android:layout_height="4px"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="16dp"
                            android:background="#fff" />

                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:id="@+id/newRela"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:descendantFocusability="blocksDescendants"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="18dp"

                        >


                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recylerViewCategory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:clipToPadding="false"
                            android:layout_marginTop="36dp" />

                    </RelativeLayout>
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:background="#305478"
                            android:gravity="bottom"
                            android:padding="8dp"
                            android:text="SEARCH BY CATEGORY"
                            android:textColor="#ffff"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="522dp"
                            android:layout_height="4px"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="16dp"
                            android:background="#fff" />

                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>